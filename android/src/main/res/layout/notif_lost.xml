<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/big_icon"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:layout_alignEnd="@+id/big_icon"
            android:layout_alignBottom="@+id/big_icon"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notification_main"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_toLeftOf="@+id/icon_container"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:paddingStart="4dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="Animal3000"
            android:textColor="#00aeef"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:text="â— 12:33"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/content_banner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:background="#ee354c"
            android:gravity="center"
            android:text="ALERTE - ANIMAL PERDU"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="6dp"
            android:paddingStart="4dp"
            android:text="LOGO Notre partenaire "
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/ad"
            android:layout_width="54dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="3.5dp"
        android:paddingTop="8dp"/>
</RelativeLayout>